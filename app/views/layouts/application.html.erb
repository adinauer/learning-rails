<!DOCTYPE html>
<html>
<head>
  <title>FHBay</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a href="<%= root_url %>" class="brand">
					<img class="logo" src="/assets/fhbay.png" alt="FHBay" />
				</a>

				<div class="fhbaynav">
					<ul class="nav">
						<li><%= link_to "Offer an article", statuses_path %></li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid">
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

		<div class="row-fluid">
			<div class="span3">
				<h2>Categories</h2>
				<ul class="nav nav-list">
					<% @categories.each do |category| %>
						<li class="nav-header">
							<a href="/category/<%= "#{category.id}/#{category.url_name}" %>">
								<%= category.name %>
							</a>
						</li>

						<% category.sub_categories.each do |sub_category| %>
							<li>
								<a href="/category/<%= "#{sub_category.id}/#{category.url_name}/#{sub_category.url_name}" %>">
									<%= sub_category.name %>
								</a>
							</li>
						<% end %>
					<% end %>
				</ul>
			</div>

			<div class="span9">
				<%= yield %>
			</div>
		</div>
	</div>
</body>

</html>